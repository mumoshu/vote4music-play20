# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /list                       controllers.Application.list()

GET     /search                     controllers.Application.search(filter)

GET     /listByGenreAndYear         controllers.Application.listByGenreAndYear(genre: Int, year)

GET     /listByApi.$format<json|xml> controllers.Application.listByApi(genre: Option[Int], year: Option[String], format)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
